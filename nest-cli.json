{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"assets": [
			{
				"include": "services/mail/templates/**/*",
				"outDir": "dist"
			},
			{
				"include": "assets/**/*",
				"outDir": "dist"
			}
		]
	},
	"watchOptions": {
		"ignored": [
			"**/dist/**",
			"**/uploads/**",
			"**/generated/**",
			"**/public/**"
		]
	}
}
